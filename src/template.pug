.clocklet
  .clocklet__plate
    .clocklet-dial.clocklet__dial-minute
      .clocklet-dial__hand
      for val, index in Array(60)
        button.clocklet-dial__tick(data-clocklet-tick-value=index style=tickPosition(index, 60, index % 5 ? 46 : 40))
    .clocklet-dial.clocklet__dial-hour
      .clocklet-dial__hand
      for val, index in Array(12)
        button.clocklet-dial__tick(data-clocklet-tick-value=index style=tickPosition(index, 12, 39))
    .clocklet__toggle-am-pm
    .clocklet__hands-origin

-
  function tickPosition(value, maxValue, radius) {
    const angle = Math.PI * (.5 - 2 * value / maxValue)   // π/2 - 2πΘ
    const x = Math.round((50 + radius * Math.cos(angle)) * 10) / 10
    const y = Math.round((50 - radius * Math.sin(angle)) * 10) / 10
    return `left:${x}%;top:${y}%`
  }
